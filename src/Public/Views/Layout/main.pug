                margin: 20px auto 0;
            }

            .refresh-url {
                float: right;
            }

            .main-title {
                margin-top: 12px!important;
            }

            .nav-link {
                text-align: center;
                color: #9d9d9d;
                text-shadow: 0 -1px 0 rgba(0,0,0,.25);
                padding-top: 15px;
                padding-bottom: 15px;
                display: block;
                text-decoration: none;
                background-color: transparent;
                font-size: 16px;
            }

            .nav-link:hover {
                color: #f5f5f5;
                background-color: transparent;
                text-decoration: none;
            }

            @media (max-width: 767px) {
                .markdown-body {
                    padding: 15px;
                }
            }

